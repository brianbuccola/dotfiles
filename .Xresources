! vim:      set ft=xdefaults fenc=utf-8 nu ai et sw=4:
! file:     ~/.Xresources
! author:   Brian Buccola

! ========
!  Colors
! ========

!#include "/home/brian/.xcolors/console-vga"
#include "/home/brian/.config/gruvbox-contrib/xresources/gruvbox-dark.xresources"
!#include "/home/brian/.config/gruvbox-contrib/xresources/gruvbox-light.xresources"

! =======
!  URxvt
! =======

URxvt*borderLess:       false
URxvt*colorBDMode:      true
URxvt*colorULMode:      true
URxvt*dynamicColors:    true
URxvt*eightBitInput:    true
URxvt*fading:           50
URxvt*font:             xft:Fira Mono:pixelsize=14
URxvt*jumpScroll:       true
URxvt*letterSpace:      -2
URxvt*multiScroll:      true
URxvt*rightScrollBar:   false
URxvt*saveLines:        5000
URxvt*scrollBar:        false
URxvt*scrollKey:        true
URxvt*scrollTtyOutput:  false
URxvt*toolBar:          true
URxvt*urgentOnBell:     true
URxvt*utf8:             2

! urxvt-perls
URxvt.perl-ext-common:      keyboard-select,url-select
URxvt.keysym.M-C-Escape:    perl:keyboard-select:activate
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.url-select.launcher:  qutebrowser
URxvt.url-select.underline: true

! =======
!  xterm
! =======

xterm*font:             xft:Fira Mono:pixelsize=14
xterm*dynamicColors:    true
xterm*utf8:             2
xterm*eightBitInput:    true
xterm*saveLines:        1024
xterm*scrollKey:        true
xterm*scrollTtyOutput:  false
xterm*scrollBar:        false
xterm*rightScrollBar:   false
xterm*jumpScroll:       true
xterm*multiScroll:      true
xterm*toolBar:          true
xterm*colorBDMode:      true
xterm*colorULMode:      true
xterm*borderLess:       false
xterm*urgentOnBell:     true

! ==========
!  Xmessage
! ==========

/* Xmessage*font:                  -*-fira mono-medium-*-*-*-*-*-*-*-*-*-*-* */
Xmessage*background:            #5f5f5f
Xmessage*foreground:            #d0d0d0
Xmessage*Scrollbar.width:       0
Xmessage*Scrollbar.borderWidth: 0
Xmessage*form.*.shapeStyle:     rectangle
Xmessage*Buttons:               okay
Xmessage*defaultButton:         okay
/* Xmessage*okay*font:             -*-fira mono-medium-*-*-*-*-*-*-*-*-*-*-* */
Xmessage*okay*foreground:       #1c1c1c
Xmessage*okay*borderColor:      #1c1c1c
/* Xmessage*yes*font:              -*-fira mono-medium-*-*-*-*-*-*-*-*-*-*-* */
Xmessage*yes*foreground:        #1c1c1c
Xmessage*yes*borderColor:       #1c1c1c
/* Xmessage*no*font:               -*-fira mono-medium-*-*-*-*-*-*-*-*-*-*-* */
Xmessage*no*foreground:         #1c1c1c
Xmessage*no*borderColor:        #1c1c1c

! ==============
!  Xft settings
! ==============

!Xft.dpi:            96
!Xft.antialias:      1
!Xft.rgba:           rgb
!Xft.hinting:        1
!Xft.hintstyle:      hintslight
