Config { font = "xft:xos4 Terminus:size=9"
       , position = Top
       , bgColor = "#000000"
       , fgColor = "#a89984"
       , border = NoBorder
       , lowerOnStart = True
       , commands = [ Run Wireless "wlp3s0" [ "-t", "<essid> <quality>", "-L", "50", "-H", "80"
                                            , "--low", "#83a598", "--normal", "#fabd2f", "--high", "#b8bb26"
                                            ] 10
                    , Run DynNetwork [ "-t", "<rx>|<tx>", "-S", "true", "-L", "1000", "-H", "5000"
                                     , "--low", "#b8bb26", "--normal", "#fabd2f", "--high", "#fb4934"
                                     ] 10
                    , Run Kbd [("us(dvp)", "dvp")]
                    , Run Weather "LFPO" [ "-t", "<station>: <tempC>°C", "-L", "4", "-H", "27"
                                         , "--low", "#83a598", "--normal", "#fabd2f", "--high", "#fb4934"
                                         ] 300
                    , Run Weather "CYXU" [ "-t", "<station>: <tempC>°C", "-L", "4", "-H", "27"
                                         , "--low", "#83a598", "--normal", "#fabd2f", "--high", "#fb4934"
                                         ] 300
                    , Run Battery ["-t", "<acstatus>: <left>%", "-L", "10", "-H", "70"
                                  , "--low", "#fb4934", "--normal", "#fabd2f", "--high", "#b8bb26"
                                  , "--", "-O", "<fc=#b8bb26>on</fc>", "-o", "off ", "-i", "idle"
                                  , "-f", "/sys/class/power_supply/AC/online"
                                  ] 10
                    , Run Volume "default" "Master" [ "-t", "<volume>%<status>", "--", "-O", "", "-o", " (mute)" ] 10
                    , Run Date "%a %d %b %H:%M:%S" "date" 10
                    , Run Com "/home/brian/repos/scripts/update-notify" [] "updates" 10
                    , Run StdinReader
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %wlp3s0wi%  %dynnetwork%  %LFPO%  %CYXU%  %battery%  <fc=#8ec07c>%updates%</fc>  <fc=#d3869b>%default:Master%</fc>  <fc=#d79921>%date%</fc> "
       }
