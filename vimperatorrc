" Toggle status (command) line; useful for when fullscreen videos don't actually go fullscreen
nnoremap <silent> <leader>b :js toggle_bottombar()<CR>
" nnoremap : :js toggle_bottombar('on')<CR>:
" nnoremap o :js toggle_bottombar('on')<CR>o
" nnoremap O :js toggle_bottombar('on')<CR>O
" nnoremap t :js toggle_bottombar('on')<CR>t
" nnoremap T :js toggle_bottombar('on')<CR>t
" nnoremap / :js toggle_bottombar('on')<CR>/
" nnoremap b :js toggle_bottombar('on')<CR>b
" nnoremap B :js toggle_bottombar('on')<CR>B
" nnoremap U :js toggle_bottombar('on')<CR>:undo<Space>
" cnoremap <CR> <CR>:js toggle_bottombar('off')<CR>
" cnoremap <Esc> <Esc>:js toggle_bottombar('off')<CR>
:js << EOF
function toggle_bottombar(p) {
  var bb = document.getElementById('liberator-bottombar');
  if (!bb)
    return;
  if (p == 'on'){
    bb.style.height = '';
    bb.style.overflow = '';
    return;
  }
  if (p == 'off'){
    bb.style.height = '0px';
    bb.style.overflow = 'hidden';
    return;
  }
  bb.style.height = (bb.style.height == '') ? '0px' : '';
  bb.style.overflow = (bb.style.height == '') ? '' : 'hidden';
}
toggle_bottombar('on');
EOF

source! /home/brian/.vimperatorrc.local

" vim: set ft=vimperator:
