nnoremap k 4k
nnoremap j 4j
nnoremap h <C-p>
nnoremap l <C-n>
nnoremap <C-h> h
nnoremap <C-l> l
nnoremap <BS> <C-^>
nnoremap gh :tabmove!<Space>-1<Return>
nnoremap gl :tabmove!<Space>+1<Return>
nnoremap <Left> :tabprevious<Return>
nnoremap <Right> :tabnext<Return>
nnoremap <Del> :tabclose<Return>
nnoremap gp :set app!<CR>
nnoremap gs :source /home/brian/.vimperatorrc<CR>
nnoremap U :undo<Space>
nnoremap Q :qmarks<CR>
nnoremap <C-r> :history<Space>
nnoremap <Leader>t :tab<Space>
set focuscontent
